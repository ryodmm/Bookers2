<div class="col-md-3">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
      	  <th>name</th>
      	  <th> <%= @user_id %> </th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th></th>
        </tr>
      </tbody>
    </table>


    <h2>New book</h2>

    <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <h4>title</h4>
      <%= f.text_field :title %>


      <h4>opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit 'create book' %>
    <% end %>
  </div>