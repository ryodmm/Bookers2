<main>
  <%= flash[:notice] %>

  <div class="container">
    <div class="row">

      <%= render 'list', books: @book_new %>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(current_user) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %>
                <%= @book.user.name %>
                <% end %>
              </td>

              <td><%= link_to @book.title,book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <td>
                <%= link_to edit_book_path, class: "btn btn-success" do %>
                Edit
                <% end %>

                <% if @book.user == current_user %>
                <%= link_to book_path, method: :delete, class: "btn btn-danger" do %>
                destroy
                <% end %>

                <% end %>

              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>