<div class="container">
  <div class="row">

    <%= render 'list', books: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(current_user) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %>
              <% end %>
            </td>

            <td><%= link_to @book.title,book_path(@book.id) %></td>
            <td><%= @book.body %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>