<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/1fc108571b.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <div class="card-header">
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <li>
                    <%= link_to user_path(current_user), class: "nav-link active" do %>
                      <i class="fa-solid fa-house-chimney"></i>Home
                    <% end %>
                  </li>
                  <li>
                    <%= link_to users_path, class: "nav-link active" do %>
                      <i class="fa-solid fa-users"></i>Users
                    <% end %>
                  </li>
                  <li>
                    <%= link_to books_path, class: "nav-link active" do %>
                      <i class="fa-solid fa-book-open"></i>Books
                    <% end %>
                  </li>
                  <li>
                    <%= button_to destroy_user_session_path,method: :delete, class: "nav-link active" do %>
                      <i class="fa-solid fa-right-from-bracket"></i>Log out
                    <% end %>
                  </li>
                <% else %>

                  <li>
                    <%= link_to root_path, class: "nav-link active" do %>
                      <i class="fa-solid fa-house-chimney"></i>Home
                    <% end %>
                  </li>
                  <li>
                    <%= link_to about_path, class: "nav-link active" do %>
                      <i class="fa-solid fa-link"></i>About
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_user_registration_path, class: "nav-link active" do %>
                      <i class="fa-solid fa-user-plus"></i>Sign up
                    <% end %>
                  </li>
                  <li>
                    <%= link_to user_session_path, class: "nav-link active" do %>
                      <i class="fa-solid fa-right-to-bracket"></i>Log in
                    <% end %>
                  </li>

                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <%= render 'layouts/notifications' %>


    <%= yield %>

      <footer>
        <div class="container mt-5">
        	<div class="row">
          	<div class="mx-auto">
          		<p>CopyRight Infratop.inc</p>
          	</div>
          </div>
        </div>
      </footer>
  </body>
</html>
