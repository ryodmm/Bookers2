<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="css-fontawesome/css/all.css">

  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <div class="card-header">
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <li>
                    <%= link_to root_path, class: "nav-link active" do %>
                      Home
                    <% end %>
                  </li>
                  <li>
                    <%= link_to user_path(current_user), class: "nav-link active" do %>
                      User
                    <% end %>
                  </li>
                  <li>
                    <%= link_to book_path(current_user), class: "nav-link active" do %>
                      Books
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_user_session_path(current_user), class: "nav-link active", method: :delete do %>
                      Log out
                    <% end %>
                  </li>
                <% else %>

                  <li>
                    <%= link_to root_path, class: "nav-link active" do %>
                      Home
                    <% end %>
                  </li>
                  <li>
                    <%= link_to about_path, class: "nav-link active" do %>
                      About
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_user_registration_path, class: "nav-link active" do %>
                      Sign up
                    <% end %>
                  </li>
                  <li>
                    <%= link_to user_session_path, class: "nav-link active" do %>
                      Log in
                    <% end %>
                  </li>

                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

  </body>
</html>
