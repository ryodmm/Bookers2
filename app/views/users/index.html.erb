<div class="container">
  <div class="row">
    <%= render 'books/list', books: @book, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(100,100) %>
            </td>

            <td><%= user.name %></td>
            <td>
              <%= link_to user_path(user.id) do %>
               Show
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>