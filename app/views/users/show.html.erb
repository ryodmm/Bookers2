<main>

  <div class="container">
  <div class="row">
      <%= render 'books/list', user: @user, books: @book  %>

      <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table">
              <thread>
                  <tr>
                      <th></th>
                      <th>Title</th>
                      <th>Opinion</th>
                  </tr>
              </thread>

              <% @books.each do |book| %>
                <tbody>
                  <tr>
                    <td>
                      <%= link_to user_path(current_user) do %>
                      <%= image_tag book.user.get_profile_image(100,100) %>
                      <% end %>
                    </td>

                    <td><%= link_to book.title,book_path(book.id) %></td>
                    <td><%= book.body %></td>
                  </tr>
                </tbody>
              <% end %>
          </table>
      </div>
  </div>
</div>
</main>


